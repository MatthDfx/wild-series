{% extends 'base.html.twig' %}

{% block title %}
	{{ program.title }}
{% endblock %}

{% block body %}
	<div class="media">
		<img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
		<div class="media-body">
			<h1 class="mt-0">{{ program.title }}</h1>
			<p>{{ program.synopsis }}</p>
			<p>Catégorie :
				{{ program.category.name }}</p>
			<p>Saisons disponibles :</p>
			{% for season in program.seasons %}

				<p>
					Saison n°{{ season.number }}</p>
				<a href="{{ path("program_season_show", { program: program.id, season: season.id }) }}">Voir la fiche</a>
			{% endfor %}

		</div>
	</div>
	<strong>Acteurs :</strong>
	<ul>
		{% for actor in program.actors %}
			<li>
				<a href="{{ path("app_actor_show", {id : actor.id})}}">{{ actor.name }}</li>
			{% else %}
				<li>Aucun acteur pour cette série</li>
			{% endfor %}
		</ul>
		<a href="{{ path('program_index') }}">
			Retour à la liste des programmes
		</a>
	{% endblock %}
